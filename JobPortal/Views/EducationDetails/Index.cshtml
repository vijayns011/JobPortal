@model IEnumerable<CustomAuthorizationFilter.Models.EducationDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EducationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManthAndYearOfPassing)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Percentage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EducationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ManthAndYearOfPassing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percentage)
        </td>
